<h2>Sign up</h2>

<% semantic_form_for @user do |form| %>
  <%= link_to 'Sign in using Twitter', new_twitter_user_path  %>
  <%= form.error_messages %>
  <% form.inputs do %>
    <%= form.input :email %>
    <%= form.input :password %>
    <%= form.input :password_confirmation, :label => "Confirm password" %>
  <% end %>
  <% form.buttons do %>
    <%= form.commit_button "Sign up" %>
  <% end %>
<% end %>
